<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
      >
        <View
            android:id="@+id/im_music_item_background"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/round_style_20"
            android:backgroundTint="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tv_music_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/alegreya_regular"
            android:maxLines="2"
            android:text="Дождь по листьям"
            android:textColor="@color/white"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/im_music_item_background"
            app:layout_constraintStart_toStartOf="@+id/im_music_item_background"
            app:layout_constraintTop_toBottomOf="@+id/im_music_item_background" />

        <ImageView
            android:id="@+id/im_music_item"
            android:layout_width="35sp"
            android:layout_height="35sp"
            app:layout_constraintBottom_toBottomOf="@+id/im_music_item_background"
            app:layout_constraintEnd_toEndOf="@+id/im_music_item_background"
            app:layout_constraintStart_toStartOf="@+id/im_music_item_background"
            app:layout_constraintTop_toTopOf="@+id/im_music_item_background"
            tools:srcCompat="@drawable/meditation_peaple" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>